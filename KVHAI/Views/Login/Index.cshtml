@model List<Employee>
@{
    Layout =null; 

}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title></title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-icon.css">
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/css/header-font.css" rel="stylesheet" />
</head>
<body>
    <div class="container border border-danger">
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <!-- Add other columns if necessary -->
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Emp_ID</td>
                        <td>@employee.Lname</td>
                        <!-- Add other columns if necessary -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="container vh-100">
        <div class="container" id="header">KVHAI</div>
        
            <div class="container d-flex flex-column login">
                <div class="container flex-grow-1 d-flex justify-content-center align-items-center">

                    @* CENTER FORM *@
                    <div class="row center-form w-100">
                        @* LEFT SIDE *@
                        <div class="col-6 d-flex justify-content-center left-side  p-0">
                            <img src="~/img/background.png" alt="katarungan vilalge" class="background-img img-fluid rounded rounded-end-0">
                        </div>

                        @* RIGHT SIDE *@
                        <div class="col-sm-12 col-xl-6 p-2 ">
                            <div class="container pe-5 ps-5">
                                <div class="container  d-flex align-items-center flex-column mb-3">
                                    <img src="~/img/kvhai.png" alt="katarungan vilalge" class="kvhai-img">

                                    <p id="right-header" class="mt-2">Login</p>
                                </div>
                                <form class="mb-3">
                                    @Html.AntiForgeryToken()

                                    <!-- USERNAME -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="currentColor" d="M12 4a4 4 0 1 1 0 8a4 4 0 0 1 0-8m0 16s8 0 8-2c0-2.4-3.9-5-8-5s-8 2.6-8 5c0 2 8 2 8 2" /></svg>
                                        </span>
                                        <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                                    </div>

                                    <!-- PASSWORD -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="currentColor" d="M18 8h-1V7c0-2.757-2.243-5-5-5S7 4.243 7 7v1H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V10a2 2 0 0 0-2-2M9 7c0-1.654 1.346-3 3-3s3 1.346 3 3v1H9zm4 8.723V18h-2v-2.277c-.595-.346-1-.984-1-1.723a2 2 0 1 1 4 0c0 .738-.405 1.376-1 1.723" /></svg>
                                        </span>
                                        <input type="password" class="form-control" placeholder="Password" aria-label="Password">
                                    </div>
                                    <div class="container">
                                        <div class="row ">
                                            <div class="col">
                                                <div class="mb-3 form-check">
                                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                                    <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                                                </div>
                                            </div>
                                            <div class="col d-flex justify-content-end">
                                                <div class="mb-3">
                                                    <a href="#" class="forgot">Forgot Password?</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100" id="login">Login</button>
                                </form>
                        </div>
                        </div>
                    </div> 
                </div>               
            </div>
    </div>
        


    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>