<!-- Modal IMAGE-->
<!--/////////////////////-->

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="image-container d-flex">
                    <img id="modalImage" alt="Resident Image">
                </div>
            </div>
        </div>
    </div>
</div>
<!--/////////////////////-->
<!--END Modal IMAGE-->


<div class="row">
    <div class="col">
        <div class="mt-3 mb-3">
            <div class="search-wrapper w-100">
                <div class="left">
                    <span><i class="fa-solid fa-magnifying-glass ms-2 me-2"></i></span>
                    <input type="search" class="search-input" id="res-search" placeholder="Search..." autocomplete="off">
                </div>
                <div class="vertical-divider"></div>
                <div class="right">
                    <select class="justselect" id="res-category">
                        <option selected value="name">Name</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="tableRow" id="res-tableData">
    @{
        if (Model.ResidentPagination != null)
        {
            foreach (var item in Model.ResidentPagination.ModelList)
            {
                <div class="tableContents table-responsive p-3 mb-3 shadow-sm rounded">
                    <div class="d-flex justify-content-between align-items-center border-bottom  pb-2">
                        <div class="d-flex flex-column align-items-center">
                            <span class="fw-bold">ID</span>
                            <span>@item.Res_ID</span>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <span class="fw-bold">Name</span>
                            <span>@item.Lname, @item.Fname, @item.Mname</span>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <span class="fw-bold">Phone</span>
                            <span>@item.Phone</span>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <span class="fw-bold">Email</span>
                            <span>@item.Email</span>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <span class="fw-bold">Occupancy</span>
                            <span>@item.Occupancy</span>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <span class="fw-bold">Username</span>
                            <span>@item.Username</span>
                        </div>
                    </div>
                </div>
            }

            <div class="pb-2">
                @Model.ResidentPagination.Pagenation
            </div>
        }
    }

</div>


