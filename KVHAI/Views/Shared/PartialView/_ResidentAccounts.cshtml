<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="image-container d-flex">
                    <img id="modalImage" alt="Resident Image">
                </div>
            </div>
        </div>
    </div>
</div>
<!--/////////////////////-->
<!--END Modal IMAGE-->



<div class="container w-75 mb-3">
    <div class="search-wrapper w-100">
        <div class="left">
            <span><i class="fa-solid fa-magnifying-glass ms-2 me-2"></i></span>
            <input type="search" class="search-input" id="res-search" placeholder="Search...">
        </div>
        <div class="vertical-divider"></div>
        <div class="right">
            <select class="justselect" id="res-category">
                <option selected value="name">Name</option>
            </select>
        </div>
    </div>
</div>

<div class="tableRow" id="res-tableData">
    @{
        foreach (var item in Model.ResidentPagination.ModelList)
        {
            <div class="tableContents mb-3">
                <div class="d-flex justify-content-between align-items-center border-bottom border-secondary-subtle pb-2">
                    <div class="d-flex flex-column align-items-center">
                        <span class="fw-bold">ID</span>
                        <span>@item.Res_ID</span>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <span class="fw-bold">Full Name</span>
                        <span>@item.Lname, @item.Fname, @item.Mname</span>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <span class="fw-bold">Phone</span>
                        <span>@item.Phone</span>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <span class="fw-bold">Email</span>
                        <span>@item.Email</span>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <span class="fw-bold">Occupancy</span>
                        <span>@item.Occupancy</span>
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <span class="fw-bold">Username</span>
                        <span>@item.Username</span>
                    </div>
                </div>
            </div>
        }

        <div class="pb-2">
                @Model.ResidentPagination.Pagenation
        </div>
    }

</div>


