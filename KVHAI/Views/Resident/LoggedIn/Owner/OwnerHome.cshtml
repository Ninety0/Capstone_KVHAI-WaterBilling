<!-- BODY -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="container-fluid d-flex">
            <h5 class="fw-bold text-muted">Renter</h5>
        </div>
        <hr class="border border-black" />

        <div class="container-fluid">
            <div class="row mb-3">
                <div class="col-12 col-md-6">
                    <select id="address_renter" class="form-select" aria-label="Default select example">
                        @{
                            if (Model.ResidentAddress != null)
                            {
                                if (Model.ResidentAddress.Count > 0)
                                {
                                    foreach (var item in Model.ResidentAddress)
                                    {
                                        <option value="@item.Address_ID">Blk @item.Block Lot @item.Lot @item.Street St. </option>
                                    }
                                }
                            }
                        }
                        <!-- <option selected value="1">Phase 2 (Blk 51 to  143)</option>
                        <option value="2">Phase 1 (Blk 41 to  48)</option>
                        <option value="3">Blk 24 to 40</option>
                        <option value="4">Blk 7 to 23</option>
                        <option value="">All</option> -->
                    </select>
                </div>

                <div class="col-12 col-md-6 d-flex justify-content-end mt-3 mt-lg-0">
                    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#modal-renter" style="background-color: #030712; color:white;">
                        <i class="fa-solid fa-plus"></i>
                        <span class="fw-bold ms-2" style="font-size:1rem;">New renter</span>
                    </button>
                </div>
            </div>
            <div class="container-fluid" id="renter">
                @{
                    if (Model.ResidentList != null)
                    {
                        if (Model.ResidentList.Count > 0)
                        {
                            foreach (var item in Model.ResidentList)
                            {
                                var name = string.Join(", ", item.Lname, item.Fname, item.Mname);
                                var date = DateTime.TryParse(item.Verified_At, out DateTime dateResult) ? dateResult.ToString("MMMM dd, yyyy hh:mm tt"):"";
                                <div class="row align-items-center mb-3 border border-2 shadow-sm rounded" id="rowData" data-rid="@item.Res_ID">
                                    <div class="col-8">
                                        <p class="mb-0 " data-res="@item.Res_ID"><strong>@name</strong></p>
                                        <p class="mb-0 fw-bold text-muted">Username: @item.Username</p>
                                        <p class="mb-0 fw-bold text-muted">Phone: @item.Phone</p>
                                        <p class="mb-0 fw-bold text-muted">Email: @item.Email</p>
                                        <p class="mb-0 fw-bold text-muted">Date: @date</p>
                                    </div>
                                    <div class="col-4 d-flex justify-content-end">
                                        <button id="btn_delete" class="btn btn-outline-danger btn-sm">Delete</button>
                                    </div>
                                </div>
                            }

                        }
                        else
                        {
                            <div class="row align-items-center mb-3 border border-2 shadow-sm rounded" id="rowData">
                                <div class="col-md-12">
                                    <p class="mb-0 p-5"><strong>No Data Found.</strong></p>
                                </div>
                            </div>
                        }

                    }
                }
            </div>
        </div>


    </div>
</div>


@section scripts{
    <script>
        $(document).ready(function () {
            //CODE FOR SIGNALR

            const homeConnection = setupSignalRConnection("/resident/home", "Home Hub");

            homeConnection.on("ShowAnnouncement", function () {
                toastr.info("Theres is an update in the announcement");
                updateAnnouncement();
            });

            function updateAnnouncement() {
                $.ajax({
                    url: "/LoggedIn/GetAnnouncement", // Your endpoint to fetch the updated list
                    type: "GET",
                    success: function (response) {
                        console.log(response);
                        var result = $(response).find("#table_announcement").html();
                        $('#table_announcement').html(result);
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                        console.error("Error fetching updated data:", error);
                    }
                });
            }

            $(document).on('click', '.image-click', function () {
                // Get the image URL from the clicked image
                var imageSrc = $(this).data('image');
                // Set the image inside the modal
                $('#modalImage').attr('src', imageSrc);
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            let _addrIDRenter = $('#address_renter option:selected').val();
            let _addrID = $('#address option:selected').val();
            //GetRequest(_addrID);
            GetRenter(_addrIDRenter)

            $('#btn_register_renter').click(handleRegistration);

            $(document).on('click', '#btn_accept', function () {
                var rowdata = $(this).closest('#rowData');
                var status = "1";
                var ra_id = rowdata.data('raid');
                var res_id = rowdata.find('[data-res]').data('res');
                var addr_id = rowdata.find('[data-address]').data('address');

                UpdateStatus(ra_id, addr_id, res_id, status);
            });

            $(document).on('click', '#btn_reject', function () {
                var rowdata = $(this).closest('#rowData');
                var status = "2";
                var ra_id = rowdata.data('raid');
                var res_id = rowdata.find('[data-res]').data('res');
                var addr_id = rowdata.find('[data-address]').data('address');

                //console.log(_addrID);
                UpdateStatus(ra_id, addr_id, res_id, status);
            });

            $(document).on('change', '#address_renter', function () {
                var id = $(this).val();
                GetRenter(id);
            });

            $(document).on('change', '#address', function () {
                var id = $(this).val();
                GetRequest(id);
            });

            $(document).on('click', '#btn_delete', function () {
                var raid = $(this).closest('#renter').find('[data-rid]').data('rid');

                console.log(raid);

                toastr.info(
                    'Are you sure you want to delete it?<br /><br />' +
                    '<button type="button" class="btn btn-success clear">Yes</button> ' +
                    '<button type="button" class="btn btn-danger clear">No</button>',
                    '<h5 class="fw-bold">Confirm Delete</h5>',
                    {
                        allowHtml: true
                    }
                );

                // Handle Yes button click
                $('.toast .btn-success').click(function () {
                    // Perform delete action
                    $.ajax({
                        type: 'POST',
                        url: '/ResidentHome/CancelRequest',
                        data: { resident_address: raid },
                        success: function (response) {
                            toastr.success(response);
                            GetRenter(_addrIDRenter);
                        },
                        error: function (xhr) {
                            toastr.error(xhr.responseText);
                        }
                    });
                });

            })

            function GetRenter(addressID) {
                $.ajax({
                    type: "Get",
                    url: "/OwnerHome/GetRenter",
                    data: { address_id: addressID },
                    success: function (response) {
                        var result = $(response).find('#renter').html();
                        $('#renter').html(result);
                        console.log(result);
                    },
                    error: function (xhr) {
                        toastr.error(xhr.responseText);
                    }

                });
            }

            function GetRequest(addressID) {
                $.ajax({
                    type: "Get",
                    url: "/OwnerHome/GetRentalForOwner",
                    data: { address_id: addressID },
                    success: function (response) {
                        var result = $(response).find('#rent_application').html();
                        $('#rent_application').html(result);
                        console.log(result);
                    },
                    error: function (xhr) {
                        toastr.error(xhr.responseText);
                    }

                });
            }

            function UpdateStatus(ra_id, addr_id, res_id, _status) {
                var formData = {
                    residentAddress_id: ra_id,
                    address_id: addr_id,
                    resident_id: res_id,
                    status: _status
                };

                $.ajax({
                    type: 'POST',
                    url: '/OwnerHome/UpdateStatus',
                    data: formData,
                    success: function (response) {
                        if (_status == "1") {
                            toastr.success("The application was accepted.");
                            GetRequest(_addrID);
                            GetRenter(_addrIDRenter)
                        }
                        else {
                            toastr.success("The application was rejected.");
                            GetRequest(_addrID);
                            GetRenter(_addrIDRenter)
                        }
                    },
                    error: function (xhr) {
                        toastr.error(xhr.responseText);
                    }
                });
            }

            // METHOD TO ENSURE ALL FIELDS ARE VALID
            function validateCurrentTab() {
                const currentTabElement = $('#form-renter');
                const inputs = currentTabElement.find('input, select');
                let isValid = true;

                // Use .each() for jQuery collections
                inputs.each(function () {
                    if (!this.checkValidity()) {
                        isValid = false;
                        $(this).addClass('is-invalid');
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });

                return isValid;
            }

            //METHOD INSERT
            function handleRegistration(e) {
                e.preventDefault();

                if (!validateCurrentTab()) {
                    toastr.error('Please fill out all required fields correctly.');
                    return;
                }

                // Gather resident data
                const formData = {
                    Tenant_ID: $('#cookie_id').val(),
                    Address_ID: $('#select_address').val(),
                    Lname: $('#Lname').val(),
                    Fname: $('#Fname').val(),
                    Mname: $('#Mname').val(),
                    Username: $('#Username').val(),
                    Password: $('#Password').val(),

                };
                
                //AJAX Request
                $.ajax({
                    type: 'POST',
                    url: '/OwnerHome/RegisterRenter',
                    data: formData,
                    success: function (response) {
                        toastr.success(response.message);
                        $('#form-renter')[0].reset();
                        $('#modal-renter').modal('hide');
                        GetRequestAddress();
                        console.log(response);
                    },
                    error: function (xhr) {
                        toastr.error(xhr.responseText);
                        console.error(xhr.responseText);
                    }
                });
            }


            // Remove 'is-invalid' class on input
            $('input, select').on('input', function () {
                $(this).removeClass('is-invalid');
                $(this).closest('form').removeClass('was-validated');
            });

        })
    </script>
}