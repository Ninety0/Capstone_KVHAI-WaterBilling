<!-- Modal -->
<!-- Modal Structure -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <img id="modalImage" src="" class="img-fluid" alt="Enlarged Image" />
            </div>
        </div>
    </div>
</div>


<!-- BODY -->
<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="fw-bold text-muted">My Rental Applications</h5>
        <hr class="border border-black" />

        <div class="container">
            @{
                if (Model.RequestAddressList != null && Model.RequestAddressList.Count > 0)
                {
                    foreach (var item in Model.RequestAddressList)
                    {
                        var statusText = "";
                        var statusClass = "";
                        var btnText = "";
                        //STATUS - 0 (Pending), 1 (Accepted), or 2 (Rejected) 

                        if (item.Status == 0)
                        {
                            statusText = "Pending";
                            statusClass = "bg-warning text-dark";
                        }
                        else if (item.Status == 1)
                        {
                            statusText = "Accepted";
                            statusClass = "bg-success";

                        }
                        else
                        {
                            statusText = "Rejected";
                            statusClass = "bg-warning text-danger";

                        }
                        <div class="row align-items-center mb-3 border border-2 rounded shadow-sm p-2" id="rowData">
                            <div class="col-md-8">
                                <p class="mb-0"><strong>Block @item.Block, Lot @item.Lot, Street @item.Street</strong></p>
                                <p class="mb-0 text-muted">Submitted: @item.Request_Date</p>
                                <p class="mb-0 text-muted">Status: <span class="badge @statusClass">@statusText</span></p>
                            </div>
                            <div class="col-md-4 text-end">
                                @if (item.Status == 0)
                                {
                                    <button class="btn btn-outline-success btn-sm">Cancel Request</button> <!-- Disabled until request is accepted or rejected -->

                                }
                                else if (item.Status == 1)
                                {
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Cancel Request</button> <!-- Disabled until request is accepted or rejected -->

                                }
                                else
                                {
                                    <button class="btn btn-outline-danger btn-sm">Delete Request</button> <!-- Disabled until request is accepted or rejected -->
                                }
                            </div>
                        </div>
                    }
                }
            }
            <!-- Example of a submitted application -->
            <!-- Example of an accepted application -->
            <div class="row align-items-center mb-3">
                <div class="col-md-8">
                    <p class="mb-0"><strong>Block 3, Lot 4, Street 2</strong></p>
                    <p class="mb-0 text-muted">Submitted: 2024-09-25</p>
                    <p class="mb-0 text-muted">Status: <span class="badge bg-success">Accepted</span></p>
                </div>
                <div class="col-md-4 text-end">
                    <button class="btn btn-outline-secondary btn-sm" disabled>Cancel Request</button>
                </div>
            </div>

            <!-- Example of a rejected application -->
            <div class="row align-items-center mb-3">
                <div class="col-md-8">
                    <p class="mb-0"><strong>Block 5, Lot 6, Street 3</strong></p>
                    <p class="mb-0 text-muted">Submitted: 2024-09-20</p>
                    <p class="mb-0 text-muted">Status: <span class="badge bg-danger">Rejected</span></p>
                </div>
                <div class="col-md-4 text-end">
                    <button class="btn btn-outline-danger btn-sm">Delete Request</button> <!-- Delete if rejected -->
                </div>
            </div>
        </div>

        <!-- Add more applications as needed -->
    </div>
</div>



@section scripts{
    <script>
        $(document).ready(function () {
            //CODE FOR SIGNALR

            const homeConnection = setupSignalRConnection("/resident/home", "Home Hub");

            homeConnection.on("ShowAnnouncement", function () {
                toastr.info("Theres is an update in the announcement");
                updateAnnouncement();
            });

            function updateAnnouncement() {
                $.ajax({
                    url: "/LoggedIn/GetAnnouncement", // Your endpoint to fetch the updated list
                    type: "GET",
                    success: function (response) {
                        console.log(response);
                        var result = $(response).find("#table_announcement").html();
                        $('#table_announcement').html(result);
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                        console.error("Error fetching updated data:", error);
                    }
                });
            }

            $(document).on('click', '.image-click', function () {
                // Get the image URL from the clicked image
                var imageSrc = $(this).data('image');
                // Set the image inside the modal
                $('#modalImage').attr('src', imageSrc);
            });
        });
    </script>
}