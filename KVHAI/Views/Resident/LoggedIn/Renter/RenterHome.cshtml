<!-- Modal -->
<!-- Modal Structure -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <img id="modalImage" src="" class="img-fluid" alt="Enlarged Image" />
            </div>
        </div>
    </div>
</div>


<!-- BODY -->
<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="fw-bold text-muted">My Rental Applications</h5>
        <hr class="border border-black" />

        <div class="container" id="request_data">
            @{
                if (Model.RequestAddressList != null && Model.RequestAddressList.Count > 0)
                {
                    foreach (var item in Model.RequestAddressList)
                    {
                        var statusText = "";
                        var statusClass = "";
                        var btnText = "";
                        //STATUS - 0 (Pending), 1 (Accepted), or 2 (Rejected)

                        if (item.Status == "0")
                        {
                            statusText = "Pending";
                            statusClass = "bg-warning text-dark";
                        }
                        else if (item.Status == "1")
                        {
                            statusText = "Accepted";
                            statusClass = "bg-success";

                        }
                        else
                        {
                            statusText = "Rejected";
                            statusClass = "bg-warning text-danger";

                        }
                        <div class="row align-items-center mb-3 border border-2 rounded shadow-sm p-2" id="rowData" data-raid="@item.Resident_Address_ID">
                            <div class="col-8">
                                <p class="mb-0"><strong>Block @item.Block, Lot @item.Lot, Street @item.Street</strong></p>
                                <p class="mb-0 text-muted">Submitted: @item.Request_Date</p>
                                <p class="mb-0 text-muted">Status: <span class="badge @statusClass">@statusText</span></p>
                            </div>
                            <div class="col-4">
                                @if (item.Status == "0")
                                {
                                    <button class="btn btn-outline-success btn-sm" id="btn_cancel">Cancel</button> <!-- Disabled until request is accepted or rejected -->

                                }
                                else if (item.Status == "1")
                                {
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Cancel</button> <!-- Disabled until request is accepted or rejected -->

                                }
                                <!--else
                                {
                                    <button class="btn btn-outline-danger btn-sm">Delete Request</button>-->
                                <!-- Disabled until request is accepted or rejected -->
                                <!--}-->
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="row align-items-center mb-3 border border-2 shadow-sm rounded" id="rowData">
                        <div class="col-md-12">
                            <p class="mb-0 p-5"><strong>No Data Found.</strong></p>
                        </div>
                    </div>
                }
            }


            <!-- Add more applications as needed -->
        </div>
    </div>



    @section scripts{
        <script>
            $(document).ready(function () {
                //CODE FOR SIGNALR

                const homeConnection = setupSignalRConnection("/resident/home", "Home Hub");

                homeConnection.on("ShowAnnouncement", function () {
                    toastr.info("Theres is an update in the announcement");
                    updateAnnouncement();
                });

                function updateAnnouncement() {
                    $.ajax({
                        url: "/LoggedIn/GetAnnouncement", // Your endpoint to fetch the updated list
                        type: "GET",
                        success: function (response) {
                            console.log(response);
                            var result = $(response).find("#table_announcement").html();
                            $('#table_announcement').html(result);
                        },
                        error: function (xhr, status, error) {
                            console.log(xhr.responseText);
                            console.error("Error fetching updated data:", error);
                        }
                    });
                }

                $(document).on('click', '.image-click', function () {
                    // Get the image URL from the clicked image
                    var imageSrc = $(this).data('image');
                    // Set the image inside the modal
                    $('#modalImage').attr('src', imageSrc);
                });
            });
        </script>

        <script>
            $(document).ready(function () {
                FetchApplication();

                $(document).on('click', '#btn_cancel', function () {
                    var raid = $(this).closest('#request_data').find('[data-raid]').data('raid');

                    $.ajax({
                        type: 'POST',
                        url: '/ResidentHome/CancelRequest',
                        data: { resident_address: raid },
                        success: function (response) {
                            toastr.success(response);
                            FetchApplication();
                        },
                        error: function (xhr) {
                            toastr.error(xhr.responseText);
                        }
                    });
                })

                function FetchApplication() {
                    $.ajax({
                        type: 'GET',
                        url: '/ResidentHome/GetApplication',
                        success: function (response) {
                            var result = $(response).find('#request_data').html();
                            $('#request_data').html(result);
                        },
                        error: function (xhr) {
                            toastr.error(xhr.responseText);
                        }
                    });
                }
            });
        </script>
    }
