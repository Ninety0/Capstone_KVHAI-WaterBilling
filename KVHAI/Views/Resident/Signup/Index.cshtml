    <script>
        var currentTab = 0;
        var maxTab = 2;
        var minTab = 0;

        function IncrementTab() {
            if (currentTab < maxTab) {
                let isValid = validateCurrentTab();

                if (isValid) {
                    currentTab++;
                    updateTabDisplay();
                }

            }

            if (currentTab > minTab) {
                const prev = document.querySelector('.btn-prev');
                prev.style.setProperty('display', 'block');
            }

            if (currentTab === maxTab) {
                const next = document.querySelector('.btn-next');
                next.style.setProperty('display', 'none');
            }
        }

        function validateCurrentTab() {
            const currentTabElement = document.querySelectorAll('.tab')[currentTab];
            const form = document.querySelector('form');
            const inputs = currentTabElement.querySelectorAll('input, select');
            let isValid = true;

            inputs.forEach(input => {
                if (!input.checkValidity()) {
                    isValid = false;
                    input.classList.add('was-validated');
                } else {
                    input.classList.remove('was-validated');
                }
            });

            if (!isValid) {
                // Trigger Bootstrap's validation styles
                form.classList.add('was-validated');
            }
            return isValid;
        }

        document.addEventListener('DOMContentLoaded', function () {
            const inputs = document.querySelectorAll('input, select');
            inputs.forEach(input => {
                input.addEventListener('input', function () {
                    this.classList.remove('is-invalid');
                    this.form.classList.remove('was-validated');
                });
            });
        });

        function DecrementTab() {
            if (currentTab > minTab) {
                currentTab--;
                updateTabDisplay();
            }

            if (currentTab === minTab) {
                const prev = document.querySelector('.btn-prev');
                prev.style.setProperty('display', 'none');
            }

            if (currentTab < maxTab) {
                const next = document.querySelector('.btn-next');
                next.style.setProperty('display', 'block');
            }
        }

        function updateTabDisplay() {
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach((tab, index) => {
                if (index === currentTab) {
                    tab.style.display = 'block';
                } else {
                    tab.style.display = 'none';
                }
            });

            activeClass();

        }

        function activeClass() {
            const a = document.querySelectorAll('.make-circle');
            a.forEach((circle, index) => {
                if (index === currentTab) {
                    circle.classList.add('active');
                }
                else {
                    circle.classList.remove('active');
                }

            });
        }

        $(document).ready(function () {
            updateTabDisplay();
        })

    </script>

    <script>
        $(document).ready(function () {
            $('#btn-register').click(function (e) {
                e.preventDefault();

                var form = document.getElementById('myForm');
                var formData = new FormData(form);

                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    positionClass: 'toast-top-right', // Position: toast-top-right, toast-top-left, toast-bottom-right, toast-bottom-left
                    timeOut: 3000 // Timeout duration in milliseconds (e.g., 3000ms = 3 seconds)
                };

                $.ajax({
                    type: 'POST',
                    url: window.location.origin + '/kvhai/resident/signup',
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function (response) {
                        alert("success");
                        console.log(response);
                        if (response.message = 0) {
                            toastr.error(response.message, 'Error');
                        }
                        else
                        {
                            toastr.success(response.message, 'Success');
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("error");
                        console.log(xhr.responseText);
                    }
                });
            });
        });

    </script>

