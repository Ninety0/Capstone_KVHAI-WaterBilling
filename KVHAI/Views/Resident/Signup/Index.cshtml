<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Signup</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-icon.css">
    <link href="~/css/toastr.min.css" rel="stylesheet" />
    <link href="~/css/header-font.css" rel="stylesheet" />


    <style>
        body {
            -webkit-text-size-adjust: 100%;
            font-family: "Inter", sans-serif;
            font-optical-sizing: auto;
            font-weight: 200;
            font-style: normal;
            font-size: .8rem;
        }

        #header {
            /*color: #60a5fa;*/
            font-family: "Poetsen One", sans-serif;
            font-weight: 400;
            font-style: normal;
            letter-spacing: .5rem;
            font-size: 3rem;
            color: #1B8EC9;
        }

        .center-form {
            border: 1px solid gray;
            border-radius: 10px;
            box-shadow: 1px 1px 4px 7px rgba(0, 0, 0, .25);
            width:100%;
        }

        .main-form{
            /*height: calc(100vh - 70px);*/
            display:flex;
            align-items:center;
            justify-content:center;
        }

        .center-text {
            font-family: "Poetsen One", sans-serif;
            font-weight: 400;
            font-style: normal;
            font-size: 2rem;
        }

        ul{
            list-style-type: none;
        }

        .process-seperator {
            display: flex;
            border: 1px solid #9DABB1;
            width: 20px;
            height:1px;
            align-self: center;
            justify-content:center;
        }

        .btn-next, .btn-prev {
            font-family: "Poetsen One", sans-serif;
            font-weight: 400;
            font-size: 1rem;
            font-style: normal;
            letter-spacing: 2px;
            background-color: #1B8EC9;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            padding: 0.75rem, 0.375rem ;
            line-height: 1.5;
            box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 1px rgba(0, 0, 0, 0.075);
            cursor: pointer;
        }
        .btn-prev {
            background-color: #4C4C4C;
            display:none;
        }

        .tab {
            display: none;
        }

        h3 {
            color:#3D5170;
        }

        .main-process {
            height: calc(100vh - 200px);
            overflow-y:auto;
        }

        .icon-next{
            width: 50px;
            height:20px;
        }

        .make-circle {
            position: relative;
            border: 2px solid #9DABB1;
            width: 20px;
            height: 20px;
            border-radius: 100%;
        }
        .make-circle::after{
            content:'';
            font-weight:400;
            position:absolute;
            left: 50%; /* Move to the horizontal center */
            top: 50%; /* Move to the vertical center */
            transform: translate(-50%, -50%); /* Adjust for half of the element's size */
        }

        .make-circle.active{
            background-color: #63747B;
            color:white;
        }

        .is-invalid {
            border-color: #dc3545;
        }

            .is-invalid:focus {
                border-color: #dc3545;
                box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
            }

        .custom-alert{
            position:absolute;
        }
    </style>
</head>
<body>
    @{
        if (ViewBag.Success != null)
        {
            <div class="container-fluid custom-alert">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Registration Success!</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            </div>
        }

        if (ViewBag.Error != null)
        {
            <div class="container-fluid custom-alert">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Registration Failed!</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            </div>
        }
    }

    <div class="container vh-100">
        <div class="container d-flex p-2 mb-3">
            <img src="~/img/kvhai.png" alt="katarungan vilalge" class="me-2" style="width:80px;height:80px;">
            <span class="d-flex align-items-center" id="header">KVHAI</span>
        </div>

        <div class="container main-form">
            <div class="center-form">
                <ul class="d-flex justify-content-center p-3 m-0">
                    <!-- PROCESS 1 -->
                    <li class="me-2 d-flex">
                        <div class="make-circle active"></div>

                        <i class="process-seperator ms-2"></i>

                    </li>

                    <!-- PROCESS 2 -->
                    <li class="me-2 d-flex">
                        <div class="make-circle"></div>

                        <i class="process-seperator ms-2"></i>

                    </li>

                    <!-- PROCESS 3 -->
                    <li class="me-2 d-flex">
                        <div class="make-circle"></div>

                    </li>
                </ul>

                <div class="border"></div>

                <div class="container-fluid main-process">
                    <form id="myForm" autocomplete="off" class="needs-validation" novalidate>

                        @Html.AntiForgeryToken()

                        <!-- OCCUPANCY PROCESS -->
                        <div class="container tab mt-3 mb-3 " id="occupancy">
